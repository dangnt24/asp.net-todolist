
@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_AccountLayouts.cshtml";
}

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="~/Images/banner.jpeg"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
            <div class="col-sm-6 text-black">

                <div class="d-flex align-items-center mt-5 px-5 ms-xl-4">
                    <img class="img-fluid" style="width: 80px; height: 80px;" src="~/Images/logo.png" alt="Logo" />
                    <span class="h1 fw-bold mb-0 ms-3" style="color: #6c757d;">To Do List</span>
                </div>

                <div class="d-flex align-items-center h-custom-2 p-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form style="width: 23rem;" method="post">

                        @Html.AntiForgeryToken()

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đăng ký</h3>

                        <div class="form-floating mb-4">
                            <input type="email" name="Email" id="Email" class="form-control form-control-lg border-0 text-muted" placeholder="Địa chỉ email" required />
                            <label class="" style="color: #787878;" for="Email">Email</label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="password" name="Password" id="Password" class="form-control form-control-lg border-0 text-muted" placeholder="Mật khảu" required />
                            <label class="" style="color: #787878;" for="Password">Mật khẩu</label>
                        </div>

                        <div class="form-floating mt-4">
                            <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control form-control-lg border-0 text-muted" placeholder="Xác nhận mật khảu" required />
                            <label class="" style="color: #787878;" for="ConfirmPassword">Xác nhận mật khẩu</label>
                        </div>

                        <div class="text-danger my-4">@ViewBag.error</div>

                        <div class="pt-1 my-4">
                            <button class="btn btn-info btn-lg btn-block text-light w-100 rounded-0 fs-6 fw-bolder" type="submit" style="background-color: #54b5d5; box-shadow: 0 4px 9px -4px #50abc8; ">ĐĂNG KÝ</button>
                        </div>

                        <p>Bạn đã có tài khoản?  @Html.ActionLink("Đăng nhập ngay", "Login", "Account", new { @class = "link-info" })</p>

                    </form>

                </div>

            </div>
        </div>
    </div>
</section>
